{
  "name": "mintware-de/native-cron",
  "description": "Manage native cron jobs with PHP",
  "type": "library",
  "version": "1.0.0",
  "require": {
    "php": "^8.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "spatie/phpunit-watcher": "^1.23",
    "friendsofphp/php-cs-fixer": "^3.13",
    "phpstan/phpstan": "^1.8"
  },
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "MintwareDe\\NativeCron\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MintwareDe\\NativeCron\\Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Julian Finkler",
      "email": "julian@mintware.de"
    }
  ],
  "minimum-stability": "stable",
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "fix-cs": "php-cs-fixer fix",
    "fix-cs:ci": "php-cs-fixer fix --stop-on-violation --dry-run",
    "analyse": "phpstan analyse",
    "test": "phpunit"
  }
}
